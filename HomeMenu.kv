    BoxLayout:
        id: dark
        size_hint: None, None
        opacity: 0
        disabled: True
        orientation:'horizontal'
        size_hint: 1, 1
        canvas:
            Color: 
                rgba: 0, 0, 0, 0.5
            Rectangle:
                size: self.size
