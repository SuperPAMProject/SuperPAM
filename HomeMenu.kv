#:import utils kivy.utils
#:import c colors
#:import f fonts
MainMenuLayout:

<PAMButton>:
    background_color:  utils.get_color_from_hex(self.h_color) if self.highlighted else utils.get_color_from_hex(self.d_color)
    font: f.getFont("normal")
    highlighted: False
    selected: False

<PAMActionButton>:
    size_hint_x: None
    size_hint_y: None
    background_color: 0, 0, 0, 0
    canvas:
       # Color:
          #  rgba: 1, 0, 0, 0.4


<SideBarTab>:
    size_hint: 0.5, 0.2
    pos: self.parent.pos

<SideBar>:
    size_hint_y: 0.5
    pos_y: self.parent.top
    
<GameTitle>:
    size_hint_y: 0.15
    text_size: self.size
    font_size: 24
    bold: True
    font: f.getFont("bold")
    halign: 'center'
    valign: 'top'

<GameInfo>:
    size_hint_x: 0.5
    size_hint_y: 0.15
    text_size: self.size
    font: f.getFont("normal")
    font_size: 20 
    halign: 'left'   
    valign: 'top'

<ControlBar>:
    orientation: 'horizontal'
    size_hint_y: 0.1
    size_hint_x: 1
    spacing: 0
    canvas:
        Color:
            rgb: utils.get_color_from_hex(c.getColor("primary"))
            
        Rectangle:
            pos: self.pos
            size: self.size 

<MainMenuLayout>:
    sidebar: sidebar
    games: games
    actionbtns: actionbtns
    
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation:'horizontal'
            spacing: 20
            SideBar:
                id: sidebar
                active: True
                orientation: 'vertical'
                rightGroup: games
                #on_parent: self.setLayout()
                spacing: 20
                
                SideBarTab:
                    id: sidebartab1
                    text: 'MULTIPLAYER'
                    on_press: self.press_action()
                SideBarTab:
                    id: sidebartab2
                    text: 'OPTIONS'
                SideBarTab:
                    id: sidebartab3
                    text: 'POWER'

            PAMButtonGroup:
                id: games
                leftGroup: sidebar
                rightGroup: actionbtns
                orientation: 'vertical'
                #on_parent: self.setLayout()
                #GameCarouselItem:
                #    text: 'PONG'
                #GameCarouselItem:
                #    text: 'SPACE INVADERS'
                #GameCarouselItem:
                #    text: 'MORTAL KOMBAT'
                #GameCarouselItem:
                #    text: 'PAC-MAN'
            

            BoxLayout:
                orientation: 'vertical'
                PAMVideo:
                GameDescriptionArea:
                    orientation: 'vertical'
                    GameTitle:
                        text: "Title"
                    GameInfo:
                        text: "Developer:"
                    GameInfo:
                        text: "Publisher:"
                    GameInfo:
                        text: "Year:"
                    GameInfo:
                        text: "Description:"
                PAMButtonGroup:
                    id: actionbtns
                    leftGroup: games
                    orientation: 'horizontal'
                    #on_parent: self.setLayout()
                    PAMActionButton:
                        id: play
                        background_normal: 'img/UI_PLAY_ICON.png'  # default image
                        d_action: 'img/UI_PLAY_ICON.png'
                        h_action: ''
                        s_action: ''
                    PAMActionButton:
                        id: save
                        background_normal: 'img/UI_DATA_ICON.png' # default image
                        d_action: ''
                        h_action: ''
                        s_action: ''
                    PAMActionButton:
                        background_normal: 'img/UI_FAVORITE_ICON.png' # default image
                        id: fav
                        d_action: ''
                        h_action: ''
                        s_action: ''
                        func_id: 'play'

        ControlBar:
            Label:
                text:"Select"
            Label:
                text: "Back"
            Label:
                text: "Play"
            Label:
                text: "Favorite"