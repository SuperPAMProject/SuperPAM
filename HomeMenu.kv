        PopupWindowItem:
            id: item2
            #size_hint: None, None
            opacity: 0
            disabled: True
        PopupWindowItem:
            id: item3
            #size_hint: None, None
            opacity: 0
            disabled: True
        PopupWindowItem:
            id: item4
            #size_hint: None, None
            opacity: 0
            disabled: True
    PopupFooter:
        id: footer

        PopupButtonGroup:
            id: popupbtns
            pos_hint: {'center_x': 1}
