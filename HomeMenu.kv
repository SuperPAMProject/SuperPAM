    background_color: 0, 0, 0, 0
    font_size: self.height * 0.5
    background_normal: ''
    background_down: ''
<PopupWindowItem>:
    size_hint: 1, 0.40
    orientation:'horizontal'
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("primary"))
        Rectangle:
            size: self.size
            pos: self.pos          
    PAMIcon:
        id: icon
        icon: 'img/SFX_ON.png'
    PAMIcon:
        id: divider
        icon: 'img/divider.png'
    ScaleLabel:
        id: optionName
        text: 'MUTE SFX'
