<PopupWindowLayout>:
    id: popup
    size_hint: 0.6, 0.74 
    orientation:'vertical'
    spacing: 20
    pos_hint: {'top': 0.9, 'x': 0.2}
    canvas:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("secondary"))
        Rectangle:
            size: self.size
            pos:self.pos
    PopupHeader:
        id: header
    PopupWindowContent:
        id: content
        PopupWindowItem:
            id: item1
            #size_hint: None, None
