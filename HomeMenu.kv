#:kivy 1.9.0
#:import utils kivy.utils
#:import c colors
#:import f fonts
#:import pf pamFunctions
#:import w display.Window
MainMenuLayout:

<ScaleLabel>:
	_scale: 1. if self.texture_size[0] < self.width else float(self.width) / (self.texture_size[0]+0.1)
	canvas.before:
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
	canvas.after:
		PopMatrix

<ScaleButton>:
	state_image: self.background_normal if self.state == 'normal' else self.background_down
	disabled_image: self.background_disabled_normal if self.state == 'normal' else self.background_disabled_down
	_scale: 1. if self.texture_size[0] < self.width else float(self.width) / (self.texture_size[0]+0.1)
	canvas:
		Color:
			rgba: self.background_color
		BorderImage:
			border: self.border
			pos: self.pos
			size: self.size
			source: self.disabled_image if self.disabled else self.state_image
            auto_scale: 'both_lower'
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
		Color:
			rgba: self.disabled_color if self.disabled else self.color
		Rectangle:
			texture: self.texture
			size: self.texture_size
			pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)
		PopMatrix
<PAMButton>:
    font: f.getFont("normal")

<PAMActionButton>:
    size_hint: 0.3, 0.3
    background_color: 0, 0, 0, 0
    action_image: self.action_image
    d_color: self.d_color
    canvas:
        Rectangle:
            source: self.action_image
            pos: (self.pos[0]+self.size[0]/2.0) - 40, (self.pos[1]+self.size[1]/2.0) - 40
            size: (self.parent.width*0.20, self.parent.width*0.2)
<GameCarousel>:
<GameCarouselItem>:
    font_size: self.height * 0.5
<GameCarouselHighlighter>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("secondary"))
        Rectangle:
            pos: w.width*0.30, w.height*0.576
            size: w.width*0.28, w.height*0.04

<SideBar>:
    size_hint: 0.23, 0.25
    pos_hint: {'right':0.4, 'top':0.89}
    on_pos: pos={self.parent.x, self.parent.y}

<SideBarTab>:
    size_hint: 0.5, 0.12
    font_size: self.height * 0.5
<SideBarTabItem>:
<GameDescriptionArea>:
    orientation: 'vertical'
    size_hint: 0.86, 0.38
    pos_hint: {'right': 1, 'top': 1}

<GameTitle>:
    text_size: self.size
    font_size: self.height * 0.5
    bold: True
    font: f.getFont("bold")
    halign: 'center'
    valign: 'top'
    size_hint: 0.5, 0.13

<GameInfo>:
    size_hint: 1, 0.2
    text_size: self.size
    font: f.getFont("normal")
    font_size: self.height * 0.5
    halign: 'left'   
    valign: 'top'

<PAMCheckbox>:
    id: wid
    icon: self.icon
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_down:''
    size_hint: 0.16, 1
    canvas:
        Rectangle:
            source: self.icon
            pos: (self.pos[0]-20, self.pos[1])
            size: (self.parent.width*0.16, self.parent.height)
<PAMIcon@PAMButton>:
    id: icon
    icon: self.icon
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_down: ''
    size_hint: 0.16, 1
    canvas:
        Rectangle:
            source: self.icon
            pos: self.pos
            size: (self.parent.width*0.14, self.parent.height)

<PopupHeader@BoxLayout>:
    id: header
    orientation:'horizontal'
    size_hint: 1, 0.12
    padding: 20
    canvas:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("primary"))                      
        Rectangle:
            pos: self.pos
            size: self.size
    ScaleLabel: 
        id: title
        text: 'TITLE'
        halign: 'left'
        font_size: (self.height + self.width) * 0.09
        font: f.getFont("bold")
        bold: True
        

<PopupWindowContent@BoxLayout>:
    orientation:'vertical'
    size_hint: 0.77, 0.75
    spacing: 10
    padding: 20
    
<PopupFooter@BoxLayout>:
    id: footer
    orientation:'horizontal'
    size_hint: 1, 0.12
    canvas:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("primary"))                      
        Rectangle:
            pos: self.pos
            size: self.size
<PopupButtonGroup@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 0.43, 1
<PopupWindowButton>:
    size_hint: 0.19, 1
    background_color: 0, 0, 0, 0
    font_size: self.height * 0.5
    background_normal: ''
    background_down: ''
<PopupWindowItem>:
    size_hint: 1, 0.40
    orientation:'horizontal'
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("primary"))
        Rectangle:
            size: self.size
            pos: self.pos          
    PAMIcon:
        id: icon
        icon: 'img/SFX_ON.png'
    PAMIcon:
        id: divider
        icon: 'img/divider.png'
    ScaleLabel:
        id: optionName
        text: 'MUTE SFX'
        font_size: self.height * 0.5
    PamCheckbox:
        icon: 'img/unchecked.png'

<PopupWindowLayout>:
    id: popup
    size_hint: 0.6, 0.74 
    orientation:'vertical'
    spacing: 20
    pos_hint: {'top': 0.9, 'x': 0.2}
    canvas:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("secondary"))
        Rectangle:
            size: self.size
            pos:self.pos
    PopupHeader:
        id: header
    PopupWindowContent:
        id: content
        PopupWindowItem:
        PopupWindowItem:
        PopupWindowItem:
        PopupWindowItem:
    PopupFooter:
        id: footer

        PopupButtonGroup:
            id: popupbtns
            pos_hint: {'center_x': 1}
            spacing: 10
            padding: 5
            PopupWindowButton:
                text: 'CONFIRM'
                bold: True
                background_color: utils.get_color_from_hex(c.getColor("primary"))
            PopupWindowButton:
                text: 'EXIT'
                bold: True
                background_color: utils.get_color_from_hex(c.getColor("secondary"))


<PopupWindow>:
    id: pop
    title: ''
    background: 'img/no_alpha.png'
    separator_color: 0, 0, 0, 0
    size_hint: 0.5, 0.64
    auto_dismiss: False

<PAMVideo>:
    size_hint: 0.86, 0.29
    pos_hint: {'right': 1, 'top': 1}

<ControlBar>:
    orientation: 'horizontal'
    size_hint: 1, 0.08
    canvas:
        Color:
            rgb: utils.get_color_from_hex(c.getColor("primary"))
            
        Rectangle:
            pos: self.pos
            size: self.size 


<ControlBarItem>:
    font_size: self.height * 0.5
<MainMenuLayout>:
    id: main
    BoxLayout:
        orientation: 'vertical'    
        BoxLayout:
            orientation:'horizontal'
            size_hint: 1, 0.84
            SideBar:
                id: sidebar
                orientation: 'vertical'
                SideBarTab:
                    id: sidebartab1
                    func_id: 'multiplayer'
