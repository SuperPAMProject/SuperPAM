            pos: (self.pos[0]-20, self.pos[1])
            size: (self.parent.width*0.16, self.parent.height)
<PAMIcon@PAMButton>:
    id: icon
    icon: self.icon
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_down: ''
    size_hint: 0.16, 1
    canvas:
        Rectangle:
            source: self.icon
            pos: self.pos
            size: (self.parent.width*0.14, self.parent.height)

<PopupHeader@BoxLayout>:
    id: header
    orientation:'horizontal'
    size_hint: 1, 0.12
    padding: 20
    canvas:
        Color:
            rgba: utils.get_color_from_hex(c.getColor("primary"))                      
        Rectangle:
            pos: self.pos
            size: self.size
    ScaleLabel: 
        id: title
        text: 'TITLE'
        halign: 'left'
        font_size: (self.height + self.width) * 0.09
        bold: True
        

<PopupWindowContent@BoxLayout>:
    id: content
    orientation:'vertical'
    size_hint: 0.77, 0.75
    spacing: 10
    padding: 20
    
<PopupFooter@BoxLayout>:
    id: footer
    orientation:'horizontal'
